{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["next", "eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:react/recommended", "next/core-web-vitals"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "react"],
    "rules": {
        "react/react-in-jsx-scope": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
